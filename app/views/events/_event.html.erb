<div class="col-sm-6 col-md-4">
  <div class="card">

    <%= content_tag 'div', '', style: "height: 200px; background-size: cover;
    background-image: url(#{image_path('event_card.jpg')})" %>

    <div class="card-body event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3><%= link_to event.title, event_path(event) %></h3>
          <h3><small><%= l event.datetime, format: :short %></small></h3>
          <div class="mt-3 mb-3"><%= event.address %></div>
        </div>
      </div>
    </div>
  </div>
</div>
