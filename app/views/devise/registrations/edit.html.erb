<div class="container">
  <h2><%= t('devise.registrations.edit') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-3">
      <%= f.label :password %> <i><%= t('devise.passwords.edit.leave_blank') %></i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> <%= t('devise.passwords.edit.min_length', count: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password %> <i><%= t('devise.passwords.edit.current_pass_conf')%></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit t('devise.passwords.edit.update') %>
    </div>


    <div class="mb-3">
      <%= button_to t('devise.passwords.edit.cancel_account'), registration_path(resource_name), data: { confirm: t('devise.passwords.edit.confirm'), turbo_confirm: t('devise.passwords.edit.confirm') }, method: :delete %>
    </div>

    <%= link_to t('devise.passwords.edit.back'), :back %>
  <% end %>
    </div>