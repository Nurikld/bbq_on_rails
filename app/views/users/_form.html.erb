<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group mb-3">
    <%= f.label :name, t('activerecord.attributes.user.name'), class: 'form-label' %>
    <div class="input-group">
      <span class="input-group-text text-dark-gray">
        <i class="fas fa-user"></i>
      </span>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <div class="input-group">
      <span class="input-group-text text-dark-gray">
        <i class="fas fa-envelope"></i>
      </span>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="actions mt-3">
    <%= f.submit t('users.save'), class: 'btn btn-primary' %>
    или <%= link_to t('users.back'), :back %>
  </div>

<% end %>
