<div class="container">
  <h2><%= t('devise.registrations.change_pass') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group mb-3">
      <%= f.label :email %>
      <div class="input-group">
        <span class="input-group-text text-dark-gray">
          <i class="fas fa-envelope"></i>
        </span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group mb-3">
      <%= f.label :password %> <i><%= t('devise.passwords.edit.leave_blank') %></i>
      <div class="input-group">
        <span class="input-group-text text-dark-gray">
          <i class="fas fa-lock"></i>
        </span>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
      <% if @minimum_password_length %>
        <em> <%= t('devise.passwords.edit.min_length') %> <%= @minimum_password_length %> </em>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password_confirmation %>
      <div class="input-group">
        <span class="input-group-text text-dark-gray">
          <i class="fas fa-lock"></i>
        </span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group mb-3">
      <%= f.label :current_password %> <i><%= t('devise.passwords.edit.current_pass_conf')%></i>
      <div class="input-group">
        <span class="input-group-text text-dark-gray">
          <i class="fas fa-lock"></i>
        </span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>
    </div>

    <div class="actions mb-3">
      <%= f.submit t('devise.passwords.edit.update'), class: 'btn btn-primary' %>
    </div>

    <div class="mb-3">
      <%= button_to t('devise.passwords.edit.cancel_account'), registration_path(resource_name), data: { confirm: t('devise.passwords.edit.confirm'), turbo_confirm: t('devise.passwords.edit.confirm') }, method: :delete, class: 'btn btn-danger' %>
    </div>

    <%= link_to t('devise.passwords.edit.back'), :back, class: 'btn btn-secondary' %>
  <% end %>
</div>
