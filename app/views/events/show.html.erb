<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', style: "height: 200px; background-size: cover;
    background-image: url(#{image_path('event.jpg')})"%>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= @event.datetime %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <div class="mt-3">
            <%= link_to 'Изменить', edit_event_path(@event),
                        class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
